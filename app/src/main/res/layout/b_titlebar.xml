<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/title_bar"
        android:orientation="vertical">

    <com.sendinfo.tool.views.Titlebar
            android:id="@+id/bTitlebar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:paddingLeft="@dimen/dp_8"
            android:paddingRight="@dimen/dp_8">

        <ImageView
                android:id="@+id/ivLeft"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:contentDescription="@string/bTitleIvLeft"
                android:paddingBottom="@dimen/dp_4"
                android:paddingTop="@dimen/dp_4"
                android:visibility="visible"/>

        <TextView
                android:id="@+id/tvLeftCenter"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@+id/ivLeft"
                android:gravity="center"
                tools:text="深大智能"
                android:textColor="#FFFFFF"
                android:visibility="invisible"/>

        <TextView
                android:id="@+id/tvCenter"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                tools:text="首页"
                android:textColor="#FFFFFF"/>

        <TextView
                android:id="@+id/tvRightCenter"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="15dp"
                android:layout_toStartOf="@+id/tvRight"
                android:gravity="center"
                tools:text="保存"
                android:textColor="#FFFFFF"
                android:visibility="invisible"/>

        <TextView
                android:id="@+id/tvRight"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:gravity="center"
                tools:text="设置"
                android:textColor="#FFFFFF"
                android:visibility="invisible"/>

        <ImageView
                android:id="@+id/ivCenter"
                android:contentDescription="@string/bTitleIvCenter"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:visibility="invisible"/>

    </com.sendinfo.tool.views.Titlebar>
</LinearLayout>